<div class='header cols'>
	Name
	<p>
	Type
	</p>
	<p>
	Initiative
	</p>
	<p>
	Turn?
	</p>
	<p>
	Kill
	</p>

</div>

<% @combatants.each do |combatant| %>
<div class='combs cols'>

		<%= combatant.name %>

	<p>
		<%= combatant.alignment %>
	</p>

	<p>
		<%= combatant.initiative %>
	</p>

	<% if combatant.turn? %>
	<p class='go-button'>
		<%= link_to "GO!", update_turn_combatant_path(combatant), method: :patch , :class => 'go-text' %>
	</p>
	<p>
		<%= button_to "Kill", combatants_path(:id => combatant.id), :method => :delete, :class => 'kill-button' %>
	</p>

	<% else %>
	<p>
		Wait...
	</p>
	<p>
		<%= button_to "Kill", combatants_path(:id => combatant.id), :method => :delete, :class => 'kill-button' %>
	</p>
	<% end %>

</div>
<% end %>

<div class='current'>
	<% @combatants.each do |combatant| %>
		<% if combatant.turn? %>
		It is <%= combatant.name %>'s turn!
		<% end %>
	<% end %>
</div>

<div class='button'>
	<a href="/combatants/new" style="color: #ecf0f1; text-decoration: none;">New Combatant</a>
</div>
